<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 蕭鎧物理x蕭騏地科</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">蕭鎧物理x蕭騏地科 </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">首頁</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Course" asp-action="Index">課程列表</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Teacher" asp-action="Index">師資介紹</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Course" asp-action="Learning">學習版</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Faq" asp-action="Index">常見 QA</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Course" asp-action="Admin">管理後台</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link">你好，@User.Identity.Name（@User.FindFirst("http://schemas.microsoft.com/ws/2008/06/identity/claims/role")?.Value）</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link">登出</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">登入</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">註冊</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top mt-auto py-4 bg-white shadow-sm">
        <div class="container text-center">
            <div>
                <strong>蕭鎧物理 x 蕭騏地科</strong>
            </div>
            <div class="my-2">
                <small class="text-muted">
                    © 2025 All rights reserved.
                    ｜ <a href="mailto:yourmail@example.com" class="text-muted text-decoration-none">聯絡我們</a>
                    ｜ <a href="https://www.facebook.com/cklll129" target="_blank" class="text-muted text-decoration-none me-2">
                        <i class="fab fa-facebook fa-lg" style="color:#1877f3;vertical-align:middle"></i>
                        Facebook
                    </a>
                    ｜ <a href="https://www.youtube.com/watch?v=TP3hLSs5E6o&list=PLefycxa0buAwegli_oeLlKVR0igTm7WW9" target="_blank" class="text-muted text-decoration-none">
                        <i class="fab fa-youtube fa-lg" style="color:#FF0000;vertical-align:middle"></i>
                        YouTube
                    </a>
                </small>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
