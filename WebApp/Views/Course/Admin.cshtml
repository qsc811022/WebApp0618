@{
}
@model IEnumerable<WebApp.Models.Course>

@{
    ViewData["Title"] = "課程管理";
}

<h2>課程管理（Admin 專用）</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>課程名稱</th>
            <th>老師</th>
            <th>分類</th>
            <th>價格</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.TeacherName</td>
                <td>@course.CategoryName</td>
                <td>@course.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-warning">編輯</a>
                    <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('確定要刪除這個課程嗎？');">刪除</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success mb-3" asp-action="Create">新增課程</a>